generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  PersonalBook PersonalBook[]
}

model PersonalBook {
  id            Int      @id @default(autoincrement())
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  openLibraryId String
  title         String
  coverUrl     String?
  author        String?
  publishYear   Int?
  price         Float?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, openLibraryId])
}

model Author {
  id        Int      @id @default(autoincrement())
  name      String
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, country])
}